{
  "name": "erthaexchange-backend",
  "version": "1.0.0",
  "description": "Backend API for ErthaExchange platform with Firebase authentication",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc && tsc-alias",
    "build:render": "tsc -p tsconfig.production.json",
    "start": "node railway-start.js",
    "start:prod": "NODE_ENV=production node -r ./register-paths.js dist/src/server.js",
    "vercel-build": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:setup-firebase": "tsx scripts/setup-firebase.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "firebase",
    "postgresql",
    "drizzle",
    "razorpay"
  ],
  "author": "ErthaExchange Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.51.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.24",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.29.4",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^12.0.0",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "razorpay": "^2.9.6",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
